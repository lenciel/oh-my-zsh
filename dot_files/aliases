# Filesystem
alias ..='cd ..'            # Go up one directory
alias ...='cd ../..'        # Go up two directories
alias ....='cd ../../..'    # And for good measure
alias l='ls -lah'           # Long view, show hidden
alias la='ls -AF'           # Compact view, show hidden
alias ll='ls -lFh'          # Long view, no hidden

# Mac Helpers
alias show_hidden="defaults write com.apple.Finder AppleShowAllFiles YES && killall Finder"
alias hide_hidden="defaults write com.apple.Finder AppleShowAllFiles NO && killall Finder"

# Helpers
alias grep='grep --color=auto' # Always highlight grep search term
alias ping='ping -c 5'      # Pings with 5 packets, not unlimited
alias df='df -h'            # Disk free, in gigabytes, not bytes
alias du='du -h -c'         # Calculate total disk usage for a folder
alias clr='clear;echo "Currently logged in on $(tty), as $(whoami) in directory $(pwd)."'
alias tt='tt++ $HOME/.ttconf'
alias svim="sudo vim" 		# Run vim as super user
alias rmf="rm -fr"			# Remove with a warning
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"
alias f='open -a Finder ./' # Open in Finder

# Python&Django
alias pypath='python -c "import sys; print sys.path" | tr "," "\n" | grep -v "egg"'
alias pycclean='find . -name "*.pyc" -exec rm {} \;'
alias startmy='sudo /usr/local/bin/mysqld_safe &'
alias stopmy='sudo /usr/local/bin/mysqladmin shutdown'


# curl for useragents
alias iecurl="curl -H \"User-Agent: Mozilla/5.0 (Windows; U; MSIE 6.0; Windows NT 5.1; SV1; .NET CLR 2.0.50727)\""
alias ffcurl="curl -H \"User-Agent: Mozilla/5.0 (Windows; U; Windows NT 5.1; en-US; rv:1.9.0.8) Gecko/2009032609 Firefox/3.0.0 (.NET CLR 3.5.30729)\""

# HG ALIASES
alias hgst='hg status'
alias hgd='hg diff | $GIT_EDITOR -'
alias hgo='hg outgoing'

# Tmux
## start alien64 configuration
alias mblog="mux blog"
alias magent="mux goagent"
alias kg="tmux kill-session -t goagent"

# Android
alias apkd="~/bin/apk2g/apk2gold"

# SSH
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | printf '=&gt; Public key copied to pasteboard.\n'";

# Mou
alias mou="open -a Mou.app"

# Speedtest
alias speedtest='wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test500.zip'
alias pserve='python -m SimpleHTTPServer'

alias t='trash'
alias bb='autossh -M 20000 -f -i ~/.ssh/fuckgfw -N -L 0.0.0.0:3189:localhost:31280 bee@o.badbee.cc'
alias br='autossh -M 20000 -f -i ~/.ssh/fuckgfw -N -L 0.0.0.0:3189:localhost:31280 bee@r.badbee.cc'
alias bv='autossh -M 20000 -f -i ~/.ssh/fuckgfw -N -L 0.0.0.0:3189:localhost:31280 bee@vl.badbee.cc'
alias bj='autossh -M 20000 -f -i ~/.ssh/fuckgfw -N -L 0.0.0.0:3189:localhost:31280 bee@vj.badbee.cc'

# post-review
alias pr='post-review -g -o --target-groups "zoom_xerus" --target-people "caixu, lethe3000"'

# local tunnel
alias lt='/opt/boxen/nodenv/versions/v0.10.21/bin/lt'
alias ngyawp='ngrok -authtoken 1kCPTQ4hqOf2vbxpgkc2  -subdomain=yawp-lenciel 8000'
alias fport='sudo lsof -i -P | grep -i "20001"'
alias kautossh='pkill -9 autossh'
alias slog='tail -f /var/log/system.log'
